# Galeon Environment Variables
# Copy to .env and fill in values

# =============================================================================
# Blockchain
# =============================================================================

# Mantle Sepolia (testnet)
MANTLE_SEPOLIA_RPC=https://rpc.sepolia.mantle.xyz

# Mantle Mainnet
MANTLE_RPC=https://rpc.mantle.xyz

# Deployer wallet (NEVER commit real keys)
DEPLOYER_PRIVATE_KEY=

# Mantlescan API key for contract verification
MANTLESCAN_API_KEY=

# =============================================================================
# Backend (AdonisJS)
# =============================================================================

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/galeon

# Redis
REDIS_URL=redis://localhost:6379

# Session secret (generate with: openssl rand -hex 32)
APP_KEY=

# =============================================================================
# Relayer
# =============================================================================

# Relayer wallet for gas sponsorship
RELAYER_PRIVATE_KEY=

# Discord webhook for alerts (optional)
DISCORD_ALERT_WEBHOOK=
