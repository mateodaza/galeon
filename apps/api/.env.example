TZ=UTC
PORT=3333
HOST=localhost
LOG_LEVEL=info
APP_KEY=your-secret-app-key-32-characters
NODE_ENV=development

# Database (PostgreSQL)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=galeon
DB_PASSWORD=galeon
DB_DATABASE=galeon

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_QUEUE=default

# Chain Configuration
# Default chain ID for SIWE authentication
CHAIN_ID=5000
# Comma-separated list of allowed chain IDs (Mantle Mainnet: 5000, Mantle Sepolia: 5003)
ALLOWED_CHAIN_IDS=5003,5000
# RPC URL for blockchain interactions
RPC_URL=https://rpc.mantle.xyz

# Optional: Alchemy API for webhooks
# ALCHEMY_WEBHOOK_SECRET=your-alchemy-webhook-signing-key

# =============================================================================
# PONDER DATABASE (Optional - for blockchain indexer sync)
# =============================================================================
# Direct connection to Ponder's PostgreSQL database
# PONDER_DB_HOST=127.0.0.1
# PONDER_DB_PORT=5432
# PONDER_DB_USER=ponder
# PONDER_DB_PASSWORD=ponder
# PONDER_DB_NAME=ponder

# =============================================================================
# ASP (Association Set Provider) - for auto-approving deposits
# =============================================================================
# Entrypoint contract address (Mantle: 0x54BA91d29f84B8bAd161880798877e59f2999f7a)
ENTRYPOINT_ADDRESS=0x54BA91d29f84B8bAd161880798877e59f2999f7a
# Private key for account with ASP_POSTMAN role on the Entrypoint
# This account can call updateRoot() to publish ASP Merkle roots
# Falls back to RELAYER_PRIVATE_KEY if not set (assumes same account has both roles)
# ASP_POSTMAN_PRIVATE_KEY=0x...
