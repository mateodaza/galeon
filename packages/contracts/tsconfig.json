{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["hardhat.config.ts", "scripts/**/*", "test/**/*", "config/**/*"],
  "exclude": ["node_modules", "artifacts", "cache", "typechain-types"]
}
