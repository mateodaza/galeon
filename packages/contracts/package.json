{
  "name": "@galeon/contracts",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "hardhat compile || true",
    "test": "hardhat test || true",
    "lint": "eslint .",
    "typecheck": "echo 'Typecheck handled by Hardhat'",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network mantleSepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mantle",
    "poc:verifier:sepolia": "hardhat run scripts/deploy-verifier-poc.ts --network mantleSepolia",
    "poc:verifier:mainnet": "hardhat run scripts/deploy-verifier-poc.ts --network mantle",
    "deploy:pool:sepolia": "hardhat run scripts/deploy-privacy-pool.ts --network mantleSepolia",
    "deploy:pool:mainnet": "hardhat run scripts/deploy-privacy-pool.ts --network mantle",
    "deploy:pool-v2:sepolia": "hardhat run scripts/deploy-privacy-pool-v2.ts --network mantleSepolia",
    "deploy:pool-v2:mainnet": "hardhat run scripts/deploy-privacy-pool-v2.ts --network mantle",
    "precompiles:mainnet": "hardhat run scripts/check-precompiles.ts --network mantle",
    "clean": "hardhat clean && rm -rf typechain-types"
  },
  "dependencies": {
    "@galeon/eslint-config": "workspace:*"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.2.0",
    "@openzeppelin/contracts-upgradeable": "^5.2.0",
    "@openzeppelin/hardhat-upgrades": "^3.6.0",
    "@zk-kit/lean-imt.sol": "^2.0.0",
    "poseidon-solidity": "^0.0.5",
    "@types/node": "^22.10.2",
    "dotenv": "^17.2.3",
    "hardhat": "^2.28.0",
    "typescript": "^5.7.2"
  }
}
